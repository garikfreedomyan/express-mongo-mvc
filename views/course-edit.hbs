<div class="container">
  <h1>Edit course {{course.title}}</h1>
  <form action="/courses/{{course.id}}/edit" method="POST">
    <div class="form-group has-danger">
      <label for="title">Course name</label>
      <input type="text" class="form-control" name="title" id="title" value="{{course.title}}" placeholder="Enter course name" required>
      <div class="invalid-feedback">Invalid name</div>
    </div>
    <div class="form-group has-danger">
      <label for="price">Course price</label>
      <input type="text" class="form-control" name="price" id="price" value="{{course.price}}" placeholder="Enter course price" required>
      <div class="invalid-feedback">invalid price</div>
    </div>
    <div class="form-group has-danger">
      <label for="img">Course image</label>
      <input type="url" class="form-control" name="img" id="img" value="{{course.img}}" placeholder="Enter image URL" required>
      <div class="invalid-feedback">Invalid URL</div>
    </div>
    <button type="submit" class="btn btn-primary">Edit course</button>
  </form>
</div> 